@using Microsoft.AspNetCore.Components.Forms
@using Microsoft.FluentUI.AspNetCore.Components
@inherits FluentGridFilterBase<TGridItem, TProp>
@typeparam TGridItem
@typeparam TProp

<FluentStack Orientation="Orientation.Vertical">
    @if(HasError){
        <FluentMessageBar itemref="bar" Title="Date Error" Intent="@MessageIntent.Error" AllowDismiss="false">
            Error: Start Date cannot be greater than End Date
        </FluentMessageBar>
    }

    <!-- Start Date Input -->
    <FluentDatePicker Label="@StartDateLabel"
                      AriaLabel="@StartDateAriaLabel"
                      style="width:100%"
                      @bind-Value="@StartDate" />

    <!-- End Date Input -->
    <FluentDatePicker Label="@EndDateLabel"
                      AriaLabel="@EndDateAriaLabel"
                      style="width:100%"
                      @bind-Value="@EndDate" />

    <!-- Action Buttons -->
    <FluentStack HorizontalAlignment="HorizontalAlignment.End" Gap="10px">
        <!-- Apply/Search Button -->
        <FluentButton Appearance="@SearchButtonAppearance" Title="@SearchButtonTooltip" @onclick=HandleSearch>
            <FluentIcon Value="@SearchIcon" />
        </FluentButton>

        <!-- Clear Button -->
        <FluentButton Appearance="@ClearButtonAppearance" Title="@ClearButtonTooltip" @onclick=OnClear>
            <FluentIcon Value="@ClearIcon" />
        </FluentButton>
    </FluentStack>
</FluentStack>

@code {

    protected override void OnInitialized()
    {
       
    }
}

